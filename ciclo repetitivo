#include "conio.h"
using namespace std;
void main()
{
	float b,h,n,a;
	cout<< "ingrese los triangulos a calcular: "<<endl;
    cin>> n;
	for(int i=0; i<n; i++)
	{ 
	  cout<< "ingrese la base y altura: "<<endl;
	  cin>>b;
	  cin>>h;
	  a=(b*h)/2;
	  cout<< "el area es: "<<a<<endl;

    }
	getch();
}

